doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Crear Producto
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet")
  
  body
    .container.mt-5
      h1 Crear Nuevo Producto
      form(action="/products" method="POST")
        .mb-3
          label(for="name" class="form-label") Nombre
          input#name(type="text" class="form-control" name="name" required)
        
        .mb-3
          label(for="description" class="form-label") Descripci√≥n
          textarea#description(class="form-control" name="description" rows="4" required)

        .mb-3
          label(for="price" class="form-label") Precio
          input#price(type="number" class="form-control" name="price" step="0.01" required)

        .mb-3
          label(for="stock_quantity" class="form-label") Cantidad en Stock
          input#stock_quantity(type="number" class="form-control" name="stock_quantity" required)

        button(type="submit" class="btn btn-primary") Crear Producto

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
